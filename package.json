  },
  "files": [
    "bin",
    "lib",
    "README.md"
  ],
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@darkobits/lolcatjs": "^4.0.1",
    "chalk": "^5.4.1",
